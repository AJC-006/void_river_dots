# General

icons=1
markup=1
actions=1
width=320
height=190
sort=-time
invisible=0
group-by=none
format=%s\n%b
layer=overlay
border-size=1
max-visible=10
margin=2,2,2,2
outer-margin=15
max-icon-size=42
anchor=top-right
border-radius=7
ignore-timeout=0
text-alignment=right
default-timeout=3000
on-button-left=dismiss-all
font=JetBrainsMono Nerd Font Bold 9.5
icon-path=/usr/share/icons/Reversal-purple:/usr/share/icons/hicolor


# Colors (Catppuccin Mocha)

background-color=#073642
text-color=#A8B2AF
border-color=#93A1A1
progress-color=over #313244

# Per-mode settings

[mode=do-not-disturb]
invisible=1
on-notify=none

[mode=silent]
on-notify=none

[urgency=high]
border-color=#fab387
